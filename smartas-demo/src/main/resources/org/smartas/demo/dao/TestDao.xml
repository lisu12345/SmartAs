	<select id="getById" resultMap="TestResultMap">
		SELECT
		T.*
		FROM tpl_temp_t T
		WHERE T.ID = #{id}
	</select>
	
	
	<select id="getByIds" resultMap="TestResultMap">
		SELECT
		T.*
		FROM tpl_temp_t T
		WHERE ID in
		<foreach item="id" collection="ids" open="(" separator="," close=")">
		  #{id}
		</foreach>
	</select>

