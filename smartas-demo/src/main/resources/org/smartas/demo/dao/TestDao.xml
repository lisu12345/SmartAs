	<sql id="base_insert_sql">
		INSERT INTO tpl_temp_t (
			id,name,test,

			tenant_id,app_name,revision, 
			create_user_id,last_update_user_id,create_date,last_update_date 
		  ) VALUES (
			#{id,jdbcType=INTEGER},#{name,jdbcType=VARCHAR},#{test,jdbcType=DATE},

