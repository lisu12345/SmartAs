			#{currentUserId,jdbcType=NUMERIC},#{currentUserId,jdbcType=NUMERIC},NOW(),NOW() 
		  )
	</sql>

	<insert id="insert" parameterType="org.smartas.demo.Test" databaseId="mysql">
		<include refid="base_insert_sql" />
		<selectKey resultType="long" keyProperty="id" order="AFTER">
			SELECT LAST_INSERT_ID() AS ID
		</selectKey>
	</insert>
	
	<insert id="insert" parameterType="org.smartas.demo.Test" databaseId="oracle">
		<selectKey resultType="long" keyProperty="id" order="BEFORE">
        	SELECT tpl_temp_s.nextval AS value FROM dual  
    	</selectKey>
    	<include refid="base_insert_sql" />
	</insert>

	<update id="update" parameterType="org.smartas.demo.Test">
		UPDATE tpl_temp_t
		<set>
		  <if test="name != null">
	        name = #{name,jdbcType=VARCHAR},
	      </if>
		  <if test="test != null">
	        test = #{test,jdbcType=DATE},
	      </if>
          revision = #{revisionNext,jdbcType=INTEGER},
          last_update_user_id = #{currentUserId,jdbcType=NUMERIC},
          last_update_date = now(),
		</set>
		WHERE ID = #{id,jdbcType=NUMERIC}
	</update>

	<delete id="deleteById">
		DELETE FROM tpl_temp_t
		WHERE ID = #{id}
	</delete>
	
	<delete id="deleteByIds">
		DELETE FROM tpl_temp_t
